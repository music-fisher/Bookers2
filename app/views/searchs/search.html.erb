<% if @model == '1' %>
  <h2>"Users search for #{@content}"</h2>
<% @records.each do |user| %>
<table class="table">
                <tr>
                    <th>image</th>
                    <th>name</th>
                    <th></th>
                </tr>
                <tr>
                  <td>
                  <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg" %>
                  </td>
                  <td><%= user.name %></td>
                  <td><%= link_to "Show",user_path(user) %></td>
                  <td> フォロー数: <%= user.followings.count %></td>
                  <td> フォロワー数:<%= user.followers.count %></td>
</table>      
<% end %>
  <% else @model == '2' %>
  <h2>"Books search for #{content}" </h2>
<% @records.each do |book| %>
 <table class="table table-hover">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <tr>
      <td>
        <%= link_to user_path(book.user) do %>
        <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg" %>
        <% end %>
      </td>
        <td><%= link_to book.title,book_path(book) %></td>
        <td><%= book.body %></td>
    </tr>
    </table>
<% end %>
<% end %>