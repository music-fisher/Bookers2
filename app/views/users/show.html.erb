<p id = "notice">
 <%= notice %>
</p>
<div class="container">
    <div class="row">
        <%= render 'searchs/form' %>
        <div class="col-xs-3">
           <%= render 'users/info', user: @user, book: @book %>
        </div>
        <div class="col-xs-9">
            <h2>Books</h2>
            <table class="table table-hover">
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>
            <% @books.each do |book| %>
                <tr>
                    <td>
                        <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg" %>
                    </td>
                    <td>
                     <%= link_to book.title,book_path(book) %>
                    </td>
                    <td>
                      <%= book.body %>
                    </td>
                    <td><p>コメント数：<%= book.post_comments.count %></p></td>
                </tr>
            <% end %>
            </table>
        </div>
    </div>
</div>