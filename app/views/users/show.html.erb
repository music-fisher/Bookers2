<p id = "notice">
 <%= notice %>
</p>
<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <h2>User info</h2>
            <table>
                <tbody>
                    <tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg" %></tr>
                    <tr>
                        <th>name</th>
                        <th><%= @user.name %></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <!--<th><%= @user.introduction %><th>-->
                        <th>
                            <%= link_to "#",edit_user_path(current_user.id) %>
                        </th>
                    </tr>
                </tbody>
            </table>

            <h2>New book</h2>
            <%= form_with model:@book, local:true do |f| %>
                <h4>Title</h4>
                <%= f.text_field :title %>
                <h4>Opinion</h4>
                <%= f.text_area :body%>
                <%= f.submit 'Create Book'%>
            <% end %>
        </div>
        <div class="col-lg-9">
            <h2>Books</h2>
            <table>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>
            <% @books.each do |book| %>
                <tr>
                    <td>
                        <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg" %>
                    </td>
                    <td>
                     <%= link_to book.title,book_path(book) %>
                    </td>
                    <td>
                      <%= book.body %>
                    </td>
                </tr>
            <% end %>
            </table>
        </div>
    </div>
</div>