<h2>User info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>error
  <% @user.errors.full_messages.each do |message| %>
  <%= message%>
  <% end %>
<% end %>

<%= form_with model: @user, local: true do |f| %>
  <h4>Name</h4>
  <%= f.text_field :name %>
  <h4>Image</h4>
  <%= f.attachment_field :profile_image %>
  <h4>Introduction</h4>
  <%= f.text_area :introduction %>
  <%= f.submit 'Update User' %>
<% end %>